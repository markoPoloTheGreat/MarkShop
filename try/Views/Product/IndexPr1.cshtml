@model IEnumerable<MarkShop.Models.Product>
@* 
השורה מאפשרת לעבור על כל המוצרים הנמצאים בטבלה
למשל באמצעות לולאת 
foreach
 *@
@{
    ViewData["Title"] = "Product List";
}
<h2>Product List</h2>@* כותרת הדף *@

<table class="table table-striped">
    @* כותרות העמודות *@
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
                <td>
                    @if (product.ImageUrl!=null)
                    {
                        <img src="@Url.Content(product.ImageUrl)" width="100" height="100" />
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("EditPr", "Product", new { id = product.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("CreatePr", "Product")">Add New Product</a>